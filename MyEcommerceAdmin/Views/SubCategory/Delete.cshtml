@model MyEcommerceAdmin.Models.SubCategory
@{
    ViewBag.Title = "Conform Delete Category";
}

<Div class="row">
    <div class="col">
        <div class="col-md-12">
            @using (Html.BeginForm("Delete", "SubCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(x => x.CategoryID)
                @Html.AntiForgeryToken()
                <section class="section about-section gray-bg" id="about">
                    <div class="container">
                        <div class="row align-items-center flex-row-reverse">
                            <div class="col-lg-8">
                                <div class="about-text go-to">
                                    <h2 class="dark-color text-danger">Conform to Delete Category </h2>
                                    <hr />
                                    <h3 class="theme-color lead fs-2">@Model.Name</h3>
                                   
                                </div>
                            </div>
                         
                        </div>
                        <div class="counter mt-4">
                            <div class="row">
                                <div class="col-6 col-lg-3">
                                    <a href="@Url.Action("ManageCategoty", "SubCategory")" class="btn btn-info btn-sm "><i class="fa-regular fa-hand-back-point-left"></i> Back to the list</a>
                                </div>
                                <div class="col-6 col-lg-3">
                                    <button type="submit" class="btn btn-danger "><i class="fa-solid fa-trash "></i>&nbsp;Conform Delete</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
</Div>

